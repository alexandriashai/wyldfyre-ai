# Wyld Fyre AI Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# API Keys (Required)
# =============================================================================

# Anthropic Claude API - Used by all agents
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI - Used for embeddings (text-embedding-3-small), Whisper (STT), TTS
OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# AWS Configuration (Required for production)
# =============================================================================

# AWS Secrets Manager for sensitive configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# =============================================================================
# Cloudflare Configuration (Required for domain management)
# =============================================================================

CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_EMAIL=your-cloudflare-email@example.com
CLOUDFLARE_ACCOUNT_ID=your-account-id

# =============================================================================
# GitHub Configuration (Required for code backup)
# =============================================================================

GITHUB_PAT=ghp_your-personal-access-token

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_infrastructure
POSTGRES_USER=ai_infra
POSTGRES_PASSWORD=your-secure-password-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Optional, leave empty for local dev

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# JWT Authentication
JWT_SECRET=your-jwt-secret-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Web Portal
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Voice Service
VOICE_SERVICE_HOST=0.0.0.0
VOICE_SERVICE_PORT=8001

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# Loki
LOKI_PORT=3100

# =============================================================================
# Agent Configuration
# =============================================================================

# Claude Model Configuration
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Agent Heartbeat (seconds)
AGENT_HEARTBEAT_INTERVAL=30
AGENT_HEARTBEAT_TIMEOUT=90

# =============================================================================
# Memory Configuration
# =============================================================================

# Memory Tier Retention (days)
HOT_MEMORY_RETENTION_HOURS=24
WARM_MEMORY_RETENTION_DAYS=30
COLD_MEMORY_RETENTION_DAYS=365

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# Credential encryption for QA Agent browser automation
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIAL_ENCRYPTION_KEY=your-generated-fernet-key-here
