# AI Infrastructure - FastAPI Backend
# Multi-stage build for production

# =============================================================================
# Stage 1: Builder
# =============================================================================
FROM python:3.12-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast package installation
RUN pip install uv

# Copy dependency files and source code
COPY pyproject.toml ./
COPY packages/ packages/
COPY database/ database/
COPY services/api/ services/api/

# Create virtual environment and install dependencies
RUN uv venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Install packages in order
RUN uv pip install -e packages/core
RUN uv pip install -e packages/messaging
RUN uv pip install -e packages/memory
RUN uv pip install -e database
RUN uv pip install -e services/api

# =============================================================================
# Stage 2: Runtime
# =============================================================================
FROM python:3.12-slim as runtime

WORKDIR /app

# Install runtime dependencies including tmux for terminal and docker CLI for container management
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    tmux \
    sudo \
    ca-certificates \
    gnupg \
    ncurses-term \
    git \
    && rm -rf /var/lib/apt/lists/* \
    # Install Docker CLI from official Docker repo
    && install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && chmod a+r /etc/apt/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian bookworm stable" > /etc/apt/sources.list.d/docker.list \
    && apt-get update \
    && apt-get install -y --no-install-recommends docker-ce-cli \
    && rm -rf /var/lib/apt/lists/* \
    && groupadd -g 988 docker 2>/dev/null || true \
    && useradd -m -u 1000 -G docker appuser \
    && (groupadd -g 2000 wyld 2>/dev/null || true) \
    && useradd -m -u 1015 -g 2000 -G docker wyld-api 2>/dev/null || usermod -aG docker wyld-api \
    && echo "appuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/appuser \
    && echo "wyld-api ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers.d/wyld-api \
    && echo "set -g default-terminal 'xterm-256color'" > /etc/tmux.conf \
    && echo "set -g terminal-overrides ',xterm-256color:Tc'" >> /etc/tmux.conf

# Install Node.js for Claude Code CLI
RUN curl -fsSL https://deb.nodesource.com/setup_22.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/* \
    && npm install -g @anthropic-ai/claude-code

# Copy virtual environment from builder
COPY --from=builder /opt/venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy application code
COPY packages/ packages/
COPY database/ database/
COPY services/api/ services/api/
COPY config/ config/
COPY alembic.ini alembic.ini

# Reinstall editable packages to update links to new source location
RUN pip install -e packages/core -e packages/messaging -e packages/memory -e database -e services/api --no-deps

# Set ownership and ensure files are readable
RUN chmod -R a+r /app && chown -R appuser:appuser /app

# Configure git to trust all directories (needed for git ops on project dirs with different owners)
RUN git config --system --add safe.directory '*'

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health/live || exit 1

# Run the application
# Using single worker to avoid duplicate pub/sub handling
# TODO: Implement proper consumer groups for multi-worker support
CMD ["uvicorn", "services.api.src.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "1"]
